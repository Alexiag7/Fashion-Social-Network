<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Editar diseño</title>
    <%- include('./modules/links.ejs') %>
    <link rel="stylesheet" href="/stylesheets/registerForm.css">

  </head>
  <body>
    <header>
      <%- include('./modules/navBar.ejs') %>
    </header>
    <main>
        <section class="section-1 padding-y-section">
          <div class="container-xxl">
            <div class="row justify-content-center align-items-center">
            <h3 class="text-center mb-3">Edita el diseño</h3>
            <form action="/design/editDesign/<%=result.design_id%>/<%=result.designer_id%>" method="post" enctype="multipart/form-data">
              <div class="mb-3">
                <label >
                <input
                type="text"
                name="design_name"
                aria-describedby="nameHelp" 
                placeholder="Nombre"
                value="<%=result.design_name%>">
              </label>
              </div>
              <div class="mb-3">
                <label >
                <input
                type="text"
                name="garment"
                aria-describedby="garmentHelp" 
                placeholder="Tipo de prenda"
                value="<%=result.garment%>">
              </label>
              </div>
              <div class="mb-3">
                <label >
                <input
                type="text"
                name="main_material"
                aria-describedby="main_materialHelp" 
                placeholder="Composición"
                value="<%=result.main_material%>">
              </label>
              </div>
              <div class="mb-3">
                <label >
                <input
                type="text"
                name="main_color"
                aria-describedby="main_colorHelp" 
                placeholder="Color"
                value="<%=result.main_color%>" >
              </label>
              </div>
              <div class="mb-3">
                <select
                name="genre"
                aria-label="select genre"
                value="<%=result.genre%>">
                <optgroup label="Elige la orientación">
                  <option <%= result.genre==="Hombre"?"selected":"" %>>Hombre</option>
                  <option <%= result.genre==="Mujer"?"selected":"" %>>Mujer</option>
                </optgroup>
              </select>
              </div>
              <div class="mb-3 d-flex flex-column">
                <label for="description">Descripción</label>
                <textarea
                class="p-3"
                rows="6"
                cols="20"
                id="description"
                type="text"
                name="description"
                aria-describedby="descriptionHelp" 
                ><%=result.description%></textarea>
              </div>
              <div class="mb-3">
                <label class="imagen text-light" for="inputImg">Sube una foto</label>
                <input
                type="file"
                name="img"
                id="inputImg"
                aria-describedby="imgHelp"
                hidden>
              </div>
              <div class="text-light mt-4">
                <button class="text-light" type="submit">Enviar</button>
                <button class="text-light" type="button" onclick="window.location.href='/design/profile/<%=result.design_id%>'">Cancelar</button>
              </div>
            </form>
          </div>
        </div>
        </section>
      </main>
  
  
  
      <%- include('./modules/footer.ejs') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.4/dist/js/bootstrap.bundle.min.js" integrity="sha384-YUe2LzesAfftltw+PEaao2tjU/QATaW/rOitAq67e0CT0Zi2VVRL0oC4+gAaeBKu" crossorigin="anonymous"></script>
  </body>
</html>