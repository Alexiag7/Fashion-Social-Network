<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login</title>
    <%- include('./modules/links.ejs') %>
    <link rel="stylesheet" href="/stylesheets/loginForm.css">
  </head>
  <body>
    <header>
      <%- include('./modules/navBar.ejs') %>
    </header>
    <main>
      <div class="section-1 padding-y-section">
        <div class="container-xxl">
          <div class="row justify-content-center align-items-center">
            <h3 class="text-center mb-4">Inicia sesión</h3>
        <form 
        action="/designer/login"
        method="post">
          <div class="mb-3 d-flex flex-column align-items-center">
            <label>
            <input type="email" aria-describedby="emailHelp" name="email" placeholder="Email">
          </label>
          </div>
          <div class="mb-3 d-flex flex-column align-items-center">
            <label>
            <input type="password" aria-describedby="password" name="password" placeholder="Contraseña">
          </label>
        </div>
          <p class="warning mt-3 text-center"><%= warning %></p>
          <div class="buttons d-flex justify-content-center"><button class="mx-2 text-light">Entrar</button>
            <button class="mx-2 text-light" type="button" onclick="window.location.href='/'" >Cancelar</button>
          </div>
          <div>
            <p class="text-center my-3">¿No estas registrado? <a class="text-dark fw-bold" href="/designer/registerForm">Registrate</a></p>
          </div>
        </form>
      </div>
    </div>
    </div>
    </main>
      <%- include('./modules/footer.ejs') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.4/dist/js/bootstrap.bundle.min.js" integrity="sha384-YUe2LzesAfftltw+PEaao2tjU/QATaW/rOitAq67e0CT0Zi2VVRL0oC4+gAaeBKu" crossorigin="anonymous"></script>
  </body>
</html>