<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Registro</title>
    <%- include('./modules/links.ejs') %>
    <link rel="stylesheet" href="/stylesheets/registerForm.css">
  </head>
  <body>
    <header>
      <%- include('./modules/navBar.ejs') %>
    </header>
    <main>
        <section class="section-1 padding-y-section">
          <div class="container-xxl">
          <div class="row justify-content-center align-items-center">
            <h3 class="text-center mb-4">Crea tu cuenta</h3>
            <form class="d-flex flex-column align-items-center" action="/designer/register" method="post">
              <div class="mb-3">
                <label>
                <input type="text" aria-describedby="nameHelp" name="name" placeholder="Nombre">
              </label>
              </div>
              <div class="mb-3">
                <label >
                <input type="text" aria-describedby="lastnameHelp" name="lastname" placeholder="Apellidos">
              </label>
              </div>
              <div class="mb-3">
                <label >
                <input type="email" aria-describedby="emailHelp" name="email" placeholder="Email">
              </label>
              </div>
              <div class="mb-3">
                <label  >
                <input type="password" 
                name="password" placeholder="Contraseña">
              </label>
              </div>
              <div class="mb-3">
                <label  >
                <input type="password"  name="repPassword" placeholder="Repite contraseña">
              </label>
              </div>
              <p class="warning"><%= warning %></p>
              <div class="buttons text-light d-flex justify-content-center">
                <button class="mx-2 text-light">Crear cuenta</button>
                <button class="mx-2 text-light" type="button" onclick="window.location.href='/'" >Cancelar</button>
              </div>
              <div>
                <p class="text-center my-3">¿Ya estás registrado? <a class="text-dark fw-bold" href="/designer/loginForm">Inicia sesión</a></p>
              </div>
            </form>
          </div>
                </div>
        </section>
      </main>
      <%- include('./modules/footer.ejs') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.4/dist/js/bootstrap.bundle.min.js" integrity="sha384-YUe2LzesAfftltw+PEaao2tjU/QATaW/rOitAq67e0CT0Zi2VVRL0oC4+gAaeBKu" crossorigin="anonymous"></script>
  </body>
</html>